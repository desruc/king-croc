{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base",
        "eslint:recommended",
        "plugin:import/typescript",
        "plugin:@typescript-eslint/recommended",
        "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "import/extensions": 0,
        "prettier/prettier": [
            "error",
            {
              "printWidth": 85,
              "singleQuote": false,
              "tabWidth": 2,
              "semi": true,
              "endOfLine": "auto",
              "trailingComma": "none"
            }
          ]
    }
}
